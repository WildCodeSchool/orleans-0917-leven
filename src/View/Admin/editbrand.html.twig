{% extends 'Admin/baseform.html.twig' %}

{% block content_title %}
    <h2 class="text-center font-bold">Edition de la marque {{ brand.name }}</h2>
{% endblock %}

{% block logo_picture %}
    <img class="brand-img-preview img-thumbnail img-responsive" src="assets/images/uploads/{{ brand.logoPicture }}" alt="Logo de la marque {{ brand.name }}">
{% endblock %}
{% block brand_picture %}
    <img class="brand-img-preview img-thumbnail img-responsive" src="assets/images/uploads/{{ brand.brandPicture }}" alt="Image du magasin - partie {{ brand.name }}">
{% endblock %}
{% block model_picture %}
    <img class="brand-img-preview img-thumbnail img-responsive" src="assets/images/uploads/{{ brand.modelPicture }}" alt="Image du mannequin - partie {{ brand.name
    }}">
{% endblock %}

{% block button_submit %}
    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-tick"></span> Modifier</button>
{% endblock %}

{% block preview %}
    <p class="text-center"><a href="index.php?route=marque&id={{ brand.id }}" target="_blank"  class="btn btn-primary" role="button">Voir les modifications</a></p>
{% endblock %}
